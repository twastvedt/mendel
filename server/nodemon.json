{
  "watch": [
    "src",
    "../common/src"
  ],
  "ext": "ts,json",
  "exec": "node --loader ts-node/esm --experimental-specifier-resolution=node --enable-source-maps ./src/index.ts",
  "env": {
    "TS_NODE_PROJECT": "./tsconfig.json",
    "TS_NODE_TRANSPILE_ONLY": "true",
    "NODE_NO_WARNINGS": "1"
  }
}
