{
  "name": "garden-data",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "client-serve": "set NODE_ENV=development&& vue-cli-service serve src/client/main.ts",
    "client-build": "vue-cli-service build src/client/main.ts",
    "lint": "vue-cli-service lint",
    "server-serve": "ts-node -r tsconfig-paths/register --compiler ttypescript src/server/index.ts",
    "start": "nodemon",
    "typeorm": "typeorm"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "src/client"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run server-serve",
    "ext": "ts, js"
  },
  "dependencies": {
    "@geoman-io/leaflet-geoman-free": "^2.7.0",
    "@types/geojson": "^7946.0.7",
    "@types/proj4": "^2.5.0",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "class-validator": "^0.12.2",
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "leaflet": "^1.7.1",
    "pg": "^8.4.1",
    "proj4leaflet": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.0.3",
    "typeorm": "0.2.28",
    "vue": "^3.0.0-0",
    "vue-class-component": "^8.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.8",
    "@types/leaflet": "^1.5.19",
    "@types/node": "^14.11.8",
    "@types/ts-nameof": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@vue/cli-plugin-babel": "~4.5.7",
    "@vue/cli-plugin-eslint": "~4.5.7",
    "@vue/cli-plugin-typescript": "~4.5.7",
    "@vue/cli-plugin-vuex": "~4.5.7",
    "@vue/cli-service": "~4.5.7",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^7.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "ts-nameof": "^5.0.0",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "~4.0.3"
  }
}
